            PlugInPars="">
      <MimeType Name="image/x-fits"/>
      <MimeType Name="application/x-gfits"/>
      <MimeType Name="application/x-cfits"/>
    </PlugIn>
  </Processing>

  <Register Id="Register-Std">
    <PlugIn Name="ngamsFitsRegPlugIn" 
            PlugInPars="checksum_util=utilFitsChecksum,
